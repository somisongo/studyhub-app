# Variables d'environnement pour StudyHub

# Clés secrètes pour JWT
SECRET_KEY=replace_with_strong_random_key
REFRESH_SECRET_KEY=replace_with_another_strong_random_key

# PostgreSQL
POSTGRES_SERVER=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=studyhub

# MongoDB
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB=studyhub

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO
MINIO_URL=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=studyhub
MINIO_SECURE=false

# Email (optionnel pour la production)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@studyhub.com
EMAILS_FROM_NAME=StudyHub

# Configuration générale
ENVIRONMENT=development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]
FRONTEND_URL=http://localhost

# Configuration d'IA
OCR_MODEL_PATH=/app/models/ocr
NLP_MODEL_PATH=/app/models/nlp
AUDIO_MODEL_PATH=/app/models/audio
