# Variables d'environnement pour StudyHub (développement local sans Docker)

# Clés secrètes pour JWT
SECRET_KEY=replace_with_strong_random_key
REFRESH_SECRET_KEY=replace_with_another_strong_random_key

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=studyhub

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=studyhub

# RabbitMQ (optionnel pour le développement initial)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Redis (optionnel pour le développement initial)
REDIS_URL=redis://localhost:6379/0

# MinIO (optionnel pour le développement initial)
MINIO_URL=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=studyhub
MINIO_SECURE=false

# Email (optionnel pour le développement)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@studyhub.com
EMAILS_FROM_NAME=StudyHub

# Configuration générale
ENVIRONMENT=development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]
FRONTEND_URL=http://localhost:3000

# Configuration d'IA (adaptée pour le développement local)
OCR_MODEL_PATH=./models/ocr
NLP_MODEL_PATH=./models/nlp
AUDIO_MODEL_PATH=./models/audio
